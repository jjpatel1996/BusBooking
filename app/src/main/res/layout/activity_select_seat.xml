<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.SelectSeat">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your seat(s) :"
        android:layout_margin="5dp"
        android:textSize="25sp"
        android:textColor="#000"
        android:id="@+id/head"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total cost : â‚¹"
        android:layout_margin="5dp"
        android:layout_below="@id/head"
        android:textSize="25sp"
        android:textColor="#000"
        android:id="@+id/cost"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/head"
        android:layout_toRightOf="@id/cost"
        android:textSize="25sp"
        android:textColor="#000"
        android:id="@+id/costTv"/>



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/head"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/steer"
        android:src="@drawable/ic_steering"/>

    <LinearLayout
        android:id="@+id/LL3"
        android:layout_below="@id/steer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/seat1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat2"
                android:layout_toRightOf="@id/seat1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat3"
                android:layout_toLeftOf="@id/seat4"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat4"
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/seat5"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat6"
                android:layout_toRightOf="@id/seat5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_seat"/>
            <ImageView
                android:id="@+id/seat8"
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat7"
                android:layout_toLeftOf="@id/seat8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_seat"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/steer"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/seat9"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat10"
                android:layout_toRightOf="@id/seat9"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>
            <ImageView
                android:id="@+id/seat12"
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat11"
                android:layout_toLeftOf="@id/seat12"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/seat13"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat14"
                android:layout_toRightOf="@id/seat13"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>
            <ImageView
                android:id="@+id/seat16"
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat15"
                android:layout_toLeftOf="@id/seat16"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/seat17"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat18"
                android:layout_toRightOf="@id/seat17"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>
            <ImageView
                android:id="@+id/seat20"
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>

            <ImageView
                android:id="@+id/seat19"
                android:layout_toLeftOf="@id/seat20"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_seat"/>
        </RelativeLayout>


    </LinearLayout>
    <Button
        android:id="@+id/donebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:text="DONE"/>

</RelativeLayout>